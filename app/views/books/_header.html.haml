.header
  .left-box
    .left-box__title
      = link_to root_path do
        = image_tag "Clothing.png", width: "45%"
    .left-box__category
      = link_to categories_path do
        .left-box__category__box
          = icon('fas', 'list', class: 'icon')
          = "出版社で探す"
  .right-box
    = form_with(url: books_searches_path, local: true, method: :get) do |f|
      .right-box__form
        = f.text_field :title_key, class: 'right-box__form__input', placeholder: "タイトルを入力してください"
        = button_tag type: 'submit', class: "right-box__form__search" do
          = icon('fas', 'search')
    .right-box__info
      .right-box__info__icon
        .right-box__info__icon__btn
          = link_to edit_user_path(current_user) do
            = icon('far', 'user-circle', class: 'icon')
        .right-box__info__icon__user
          = current_user.nickname