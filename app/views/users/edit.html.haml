.wrapper
  .account-page.account-page
    .account-page__inner.clearfix
      .account-page__inner--left.account-page__header
        %h2= image_tag "Clothing.png", size: "380x100"
        %h5 アカウントの編集
        
      .account-page__inner--right.user-form
        = form_for(current_user) do |f|
          .field
            .field-label
              = f.label :nikename
            .field-input
              = f.text_field :nikename, autofocus: true
          .field
            .field-label
              = f.label :email
            .field-input
              = f.email_field :email
          .actions
            = f.submit "更新", class: 'btn'
            = link_to "ログアウト", destroy_user_session_path, method: :delete, class: 'btn'
            = link_to "トップページに戻る", root_path, class: 'btn'
